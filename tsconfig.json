{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "declarationDir": "./dist/type",
    "outDir": "./dist",
    "moduleResolution": "nodenext",
    "declaration": true,
    "emitDeclarationOnly": false,
    "paths": {
      "@/*": ["./src/*"]
    },
    "jsx": "react",
    "lib": ["esnext", "dom"]
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
